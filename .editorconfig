root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{xml,csproj,vbproj,vcxproj,fsproj,proj,props,targets}]
indent_size = 2

[*.{sh,bash}]
indent_style = tab
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf

[*.{sql}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{go}]
indent_style = tab

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{diff,patch}]
trim_trailing_whitespace = false
insert_final_newline = false

[{package.json,package-lock.json}]
indent_size = 2

[*.{toml}]
indent_size = 2

[*.{rs}]
indent_size = 4

[*.{java,kt,kts}]
indent_size = 4

[*.{cs}]
indent_size = 4

[*.{php}]
indent_size = 4

[*.{rb}]
indent_size = 2

[*.{swift}]
indent_size = 4

[*.{env,.env.*}]
insert_final_newline = true
trim_trailing_whitespace = true
